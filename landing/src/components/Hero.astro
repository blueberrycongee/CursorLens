---
interface Props {
  t: any;
}
const { t } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<section class="relative min-h-screen flex items-center justify-center pt-16 overflow-hidden">
  <!-- Radial glow background -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
    <div class="w-[600px] h-[600px] bg-accent/20 rounded-full blur-[120px]"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-4 text-center">
    <img
      src={`${base}images/logo-256.png`}
      alt="CursorLens Logo"
      class="w-24 h-24 mx-auto mb-8 animate-float rounded-2xl"
    />
    <h1 class="text-5xl md:text-7xl font-bold leading-tight mb-6">
      {t.hero.title}<br />
      <span class="gradient-text">{t.hero.titleHighlight}</span>
    </h1>
    <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto mb-10">
      {t.hero.subtitle}
    </p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a href="#download" class="px-8 py-3 bg-accent hover:bg-accent-light text-white font-semibold rounded-full transition-colors">
        {t.hero.cta}
      </a>
      <a href="https://github.com/blueberrycongee/CursorLens" target="_blank" rel="noopener"
         class="px-8 py-3 border border-white/20 hover:bg-white/10 text-white font-semibold rounded-full transition-colors">
        {t.hero.ctaSecondary}
      </a>
    </div>
  </div>
</section>
