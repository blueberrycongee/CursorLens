---
interface Props {
  t: any;
}
const { t } = Astro.props;
const base = import.meta.env.BASE_URL;
const images = [1, 2, 3, 4];
---
<section id="screenshots" class="py-24 px-4">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16" data-animate>
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{t.screenshots.title}</h2>
      <p class="text-gray-400 text-lg">{t.screenshots.subtitle}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {images.map((n, i) => (
        <div class="glass p-2 overflow-hidden" data-animate style={`animation-delay: ${i * 100}ms`}>
          <img
            src={`${base}images/preview${n}.png`}
            alt={t.screenshots.alts[i]}
            class="w-full rounded-xl"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>
