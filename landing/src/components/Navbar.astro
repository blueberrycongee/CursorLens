---
import '../styles/global.css';

interface Props {
  t: any;
}
const { t } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<nav class="fixed top-0 w-full z-50 glass border-t-0 border-x-0 rounded-none">
  <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
    <a href={base} class="flex items-center gap-2">
      <img src={`${base}images/logo-256.png`} alt="CursorLens" class="w-8 h-8 rounded-lg" />
      <span class="font-semibold text-lg text-white">CursorLens</span>
    </a>
    <div class="flex items-center gap-6 text-sm text-gray-300">
      <a href="#features" class="hover:text-white transition-colors">{t.nav.features}</a>
      <a href="#screenshots" class="hover:text-white transition-colors">{t.nav.screenshots}</a>
      <a href="#download" class="hover:text-white transition-colors">{t.nav.download}</a>
      <a href="https://github.com/blueberrycongee/CursorLens" target="_blank" rel="noopener" class="hover:text-white transition-colors">{t.nav.github}</a>
      <a href={t.nav.langHref} class="px-3 py-1 rounded-full border border-white/20 hover:bg-white/10 transition-colors">{t.nav.lang}</a>
    </div>
  </div>
</nav>
