---
interface Props {
  title: string;
  lang?: string;
}
const { title, lang = 'en' } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="CursorLens â€“ Free, open-source screen recorder & editor for creators, developers, and teams." />
    <link rel="icon" type="image/png" href={`${base}images/logo-256.png`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+SC:wght@400;500;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="font-sans antialiased">
    <slot />
    <script>
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(e => {
          if (e.isIntersecting) {
            e.target.classList.add('animate-fade-in-up');
            observer.unobserve(e.target);
          }
        });
      }, { threshold: 0.1 });
      document.querySelectorAll('[data-animate]').forEach(el => observer.observe(el));
    </script>
  </body>
</html>
